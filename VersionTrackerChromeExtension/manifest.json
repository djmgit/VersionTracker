{

  "manifest_version": 2,
  "name": "VersionTracker",
  "version": "1.0",

  "description": "An addon to provide software version information and suggest alternate softewares",
  "homepage_url": "https://github.com/djmgit/VersionTracker",
  "icons": {
    "32": "icons/vt_icon.png"
  },

  "browser_action": {
    "default_icon": "icons/vt_icon.png",
    "default_title": "VersionTracker",
    "default_popup": "popup/popup.html"
  },

  "permissions": ["storage", "contextMenus", "activeTab"]
  
}